{
  "name": "datalith",
  "description": "Collection of React components to build cool data visualizations",
  "version": "0.0.1",
  "private": true,
  "author": "Luca Falasco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "del-dist": "lerna exec --parallel -- del-cli dist",
    "prebuild": "yarn del-dist",
    "build": "lerna exec --scope datalith* -- tsc",
    "build-storybook": "cd packages/datalith-storybook && yarn build-storybook",
    "start": "cd packages/datalith-storybook && yarn storybook",
    "format": "prettier --write 'packages/*/src/**/{*.js,*.ts*,*.md}'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "del-cli": "^1.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "lint-staged": {
    "*.ts*": [
      "prettier --write",
      "git add"
    ]
  }
}
